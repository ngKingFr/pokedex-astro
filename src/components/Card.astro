---
import type { Pokemon } from "../models/pokemon";
import { Image } from "@astrojs/image/components";
import { getImgPokemon } from "../services/pokedex";

export interface Props {
  title: string;
  pokemon: Pokemon;
  href: string;
}

const { href, title, pokemon } = Astro.props;

const { id } = pokemon;

const imgSrc = getImgPokemon(+id);
---

<li class="flex items-center p-1 bg-white rounded-lg link-card">
  <a class="w-full no-underline p-4 rounded-md bg-white" href={href}>
    <h2 class="m-0 text-xl">
      {title}
    </h2>
    {
      imgSrc && (
        <Image
          format="png"
          alt={pokemon.name.french}
          width="200"
          height="200"
          src={imgSrc}
          decoding="async"
          loading="lazy"
        />
      )
    }
    <p class="mt-2 mb-0">
      Type: {pokemon.type}
    </p>
  </a>
</li>
<style>
  .link-card {
    list-style: none;
    background-image: var(--accent-gradient);
    background-size: 400%;
    border-radius: 0.5rem;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -2px rgba(0, 0, 0, 0.1);
  }

  .link-card > a {
    line-height: 1.4;
    color: #111;
    opacity: 0.8;
  }
  h2 {
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    color: #444;
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent));
  }
</style>
